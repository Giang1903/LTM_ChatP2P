<UserControl x:Class="ChatP2P.View.UserControls.Conversation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:ChatP2P.Model"
        mc:Ignorable="d"
        d:DesignHeight="400" d:DesignWidth="550">
    <Grid Background="{StaticResource LightBrush}" Margin="8" Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 8">
            <TextBlock Text="{Binding ConversationName}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkestBrush}"/>
            <Border Background="#FF4CAF50" CornerRadius="8" Padding="10 2" Margin="12 0 0 0" Visibility="{Binding CanSend, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Connected" Foreground="White" FontSize="12"/>
            </Border>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type model:DataModel}">
                            <Border Margin="0 6" Padding="10" CornerRadius="6" Background="{StaticResource AccentBrush1}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="{StaticResource DarkestBrush}"/>
                                    <TextBlock Text="{Binding Message, TargetNullValue=Hành động hệ thống}" TextWrapping="Wrap" Margin="0 4 0 0" Foreground="{StaticResource DarkestBrush}"/>
                                    <TextBlock Text="{Binding Date, StringFormat='{}{0:HH:mm:ss dd/MM/yyyy}'}" FontSize="10" Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="2" Margin="0 12 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Text="{Binding OutgoingMessage, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="60" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                     IsEnabled="{Binding CanSend}" Padding="8" Style="{StaticResource RoundedTextBox}" HorizontalAlignment="Stretch"/>

            <Button Grid.Column="1" Content="Send" Margin="8 0" Padding="16 8" Command="{Binding SendMessage}"/>
            <Button Grid.Column="2" Content="Buzz" Margin="8 0 0 0" Padding="16 8" Command="{Binding SendBuzz}"/>
        </Grid>
    </Grid>
</UserControl>
